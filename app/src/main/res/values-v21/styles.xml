<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/ToolbarPopupTheme</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="AppNoActionBarTheme">
        <item name="android:navigationBarColor">@color/colorSplashBG</item>
    </style>

    <style name="MainItem">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="GridLayoutElementTextView" >
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GridLayoutElementButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryLow</item>
        <item name="android:colorAccent">@android:color/white</item>
    </style>

    <style name="GridLayoutElementButtonTheme" >
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryLow</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="GridLayoutElementButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">48dp</item>
    </style>
    
</resources>