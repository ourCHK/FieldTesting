<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1">

            <android.support.v7.widget.GridLayout
                android:id="@+id/num_pad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="3">

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/phone_num"
                    />

                <EditText
                    android:id="@+id/phone_num"
                    android:maxLength="10"
                    style="@style/GridLayoutElementTextView"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="1" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_continue" />

                <Button
                    android:id="@+id/quality_continue_single"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_continue_multi"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_low_vol" />

                <Button
                    android:id="@+id/quality_low_vol_single"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_low_vol_multi"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_noise" />

                <Button
                    android:id="@+id/quality_noise_single"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_noise_multi"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_loop" />

                <Button
                    android:id="@+id/quality_loop_single"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_loop_multi"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_no_vol" />

                <Button
                    android:id="@+id/quality_no_vol_single"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_no_vol_multi"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_lose_vol" />

                <Button
                    android:id="@+id/quality_lose_vol_single"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_lose_vol_multi"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_current" />

                <Button
                    android:id="@+id/quality_current_single"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_current_multi"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_hao" />

                <Button
                    android:id="@+id/quality_hao_single"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_hao_multi"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_lose_call" />

                <Button
                    android:id="@+id/quality_lose_call_single"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_no_vol" />

                <Button
                    android:id="@+id/quality_lose_call_multi"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_continue" />


            </android.support.v7.widget.GridLayout>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1">

            <android.support.v7.widget.GridLayout
                android:id="@+id/num_pad_other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="3">

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/phone_num"
                    />

                <EditText
                    android:maxLength="10"
                    android:id="@+id/phone_num_other"
                    style="@style/GridLayoutElementTextView"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="1" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_continue" />

                <Button
                    android:id="@+id/quality_continue_single_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_continue_multi_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_low_vol" />

                <Button
                    android:id="@+id/quality_low_vol_single_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_low_vol_multi_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_noise" />

                <Button
                    android:id="@+id/quality_noise_single_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_noise_multi_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_loop" />

                <Button
                    android:id="@+id/quality_loop_single_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_loop_multi_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_no_vol" />

                <Button
                    android:id="@+id/quality_no_vol_single_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_no_vol_multi_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_lose_vol" />

                <Button
                    android:id="@+id/quality_lose_vol_single_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_lose_vol_multi_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_current" />

                <Button
                    android:id="@+id/quality_current_single_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_current_multi_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_hao" />

                <Button
                    android:id="@+id/quality_hao_single_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_single" />

                <Button
                    android:id="@+id/quality_hao_multi_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_multi" />

                <TextView
                    style="@style/GridLayoutElementTextView"
                    android:text="@string/quality_lose_call" />

                <Button
                    android:id="@+id/quality_lose_call_single_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_no_vol" />

                <Button
                    android:id="@+id/quality_lose_call_multi_other"
                    style="@style/GridLayoutElementButton"
                    android:text="@string/quality_type_continue" />


            </android.support.v7.widget.GridLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/call_quality_start"
            style="@style/GridLayoutElementBigButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/start_testing" />

        <Button
            android:id="@+id/call_quality_end"
            style="@style/GridLayoutElementBigButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/stop_testing" />
    </LinearLayout>
</LinearLayout>
