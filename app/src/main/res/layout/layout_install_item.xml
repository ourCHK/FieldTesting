<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    style="@style/MainItem"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.gionee.autotest.field.views.CircleImageView
        android:layout_margin="8dp"
        android:id="@+id/item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/phone_incoming"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorPrimary"
        app:civ_border_overlay="true"
        />

    <TextView
        android:layout_toEndOf="@id/item_icon"
        android:textColor="@color/colorPrimary"
        android:layout_margin="8dp"
        android:id="@+id/item_title"
        android:textStyle="bold"
        tools:text="My Text"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="48dp" />

    <Button
        android:id="@+id/item_install"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/install_font_size"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:text="@string/install"
        tools:text="@string/installed"
        android:minHeight="0dp"
        android:padding="8dp"
        android:background="@drawable/install_bg_stroke"
        android:textColor="@color/colorPrimary" />

    <View
        android:layout_below="@id/item_icon"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="0.5dp"/>

</RelativeLayout>